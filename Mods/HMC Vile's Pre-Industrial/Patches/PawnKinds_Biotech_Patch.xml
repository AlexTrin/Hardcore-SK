<?xml version="1.0" encoding="UTF-8"?>
<Patch>

	<Operation Class="PatchOperationFindMod">
	<mods>
		<li>Biotech</li>
	</mods>
	<match Class="PatchOperationSequence">
	<success>Always</success>
			<operations>
			
			<li Class="PatchOperationAdd">
				<xpath>Defs/PawnKindDef[defName="Villager_Pig"]/weaponTags</xpath>
				<value>
					<li>ShortShots</li>
				</value>
			</li>

			<li Class="PatchOperationReplace">
				<xpath>Defs/PawnKindDef[defName="Town_Guard_Pig"]/weaponTags/li[text()="ShortShots"]</xpath>
				<value>
					<li>Musket</li>
				</value>
			</li>

			<li Class="PatchOperationAddModExtension">
				<xpath>Defs/PawnKindDef[defName="Town_Guard_Pig"]</xpath>
				<value>
					<li Class="CombatExtended.LoadoutPropertiesExtension">
						<primaryMagazineCount>
							<min>18</min>
							<max>28</max>
						</primaryMagazineCount>
					</li>
				</value>
			</li>

			<li Class="PatchOperationReplace">
				<xpath>Defs/PawnKindDef[defName="Town_Councilman_Pig"]/weaponTags</xpath>
				<value>
					<weaponTags>
					  <li>MedievalMeleeBasic</li>
					</weaponTags>
				</value>
			</li>

			<li Class="PatchOperationReplace">
				<xpath>Defs/PawnKindDef[defName="Town_Trader_Pig"]/weaponTags</xpath>
				<value>
					<weaponTags>
					  <li>Musket</li>
					</weaponTags>
				</value>
			</li>

			<li Class="PatchOperationAddModExtension">
				<xpath>Defs/PawnKindDef[defName="Town_Trader_Pig"]</xpath>
				<value>
					<li Class="CombatExtended.LoadoutPropertiesExtension">
						<primaryMagazineCount>
							<min>20</min>
							<max>30</max>
						</primaryMagazineCount>
					</li>
				</value>
			</li>

			<li Class="PatchOperationReplace">
				<xpath>Defs/PawnKindDef[defName="Mercenary_Gunner_Pig"]/weaponTags</xpath>
				<value>
					<weaponTags>
					  <li>Musket</li>
					</weaponTags>
				</value>
			</li>

			<li Class="PatchOperationAddModExtension">
				<xpath>Defs/PawnKindDef[defName="Mercenary_Gunner_Pig"]</xpath>
				<value>
					<li Class="CombatExtended.LoadoutPropertiesExtension">
						<primaryMagazineCount>
							<min>50</min>
							<max>70</max>
						</primaryMagazineCount>
					</li>
				</value>
			</li>

			<li Class="PatchOperationAdd">
				<xpath>Defs/PawnKindDef[defName="Mercenary_Gunner_Pig"]</xpath>
				<value>
					<skills>
						<li>
							<skill>Shooting</skill>
							<range>3~20</range>
						</li>
					</skills>
				</value>
			</li>

			<li Class="PatchOperationReplace">
				<xpath>Defs/PawnKindDef[defName="Mercenary_Elite_Pig"]/weaponTags</xpath>
				<value>
					<weaponTags>
					  <li>Musket</li>
					</weaponTags>
				</value>
			</li>

			<li Class="PatchOperationAddModExtension">
				<xpath>Defs/PawnKindDef[defName="Mercenary_Elite_Pig"]</xpath>
				<value>
					<li Class="CombatExtended.LoadoutPropertiesExtension">
						<primaryMagazineCount>
							<min>33</min>
							<max>45</max>
						</primaryMagazineCount>
					</li>
				</value>
			</li>

			<li Class="PatchOperationAdd">
				<xpath>Defs/PawnKindDef[defName="Mercenary_Elite_Pig"]</xpath>
				<value>
					<skills>
						<li>
							<skill>Shooting</skill>
							<range>6~20</range>
						</li>
					</skills>
				</value>
			</li>

		</operations>
		</match>
    </Operation>	
</Patch>	